             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:LanguagePractice.Helpers">
    <Application.Resources>
        <!-- PoetryLab Converters -->
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <helpers:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter"/>
        <helpers:RunningToBoolConverter x:Key="RunningToBoolConverter"/>
        <helpers:CoreAdoptVisibilityConverter x:Key="CoreAdoptVisibilityConverter"/>
        <helpers:WinnerSelectVisibilityConverter x:Key="WinnerSelectVisibilityConverter"/>
        <helpers:ExportVisibilityConverter x:Key="ExportVisibilityConverter"/>
        <helpers:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
    </Application.Resources>
</Application>
