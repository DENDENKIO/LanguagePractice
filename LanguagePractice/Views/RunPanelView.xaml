<UserControl x:Class="LanguagePractice.Views.RunPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="*"/>
            <!-- Prompt Area -->
            <RowDefinition Height="Auto"/>
            <!-- Action Buttons -->
            <RowDefinition Height="*"/>
            <!-- Output Paste Area -->
            <RowDefinition Height="Auto"/>
            <!-- Finish Button -->
        </Grid.RowDefinitions>

        <!-- 1. Status Bar -->
        <Border Grid.Row="0" Background="#E3F2FD" Padding="10" Margin="0,0,0,10" CornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold" Foreground="#1565C0"/>
        </Border>

        <!-- 2. Prompt Display (Read Only) -->
        <GroupBox Grid.Row="1" Header="生成されたプロンプト (Prompt)" Margin="0,0,0,10">
            <TextBox Text="{Binding PromptText}" 
                     IsReadOnly="True" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" 
                     Background="#FAFAFA" Padding="5"/>
        </GroupBox>

        <!-- 3. Action: Copy & Open -->
        <Button Grid.Row="2" Command="{Binding CopyAndOpenAiCommand}" 
                Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold"
                Content="1. コピーしてAIサイトを開く (Copy &amp; Open)" Margin="0,0,0,15"/>

        <!-- 4. Output Paste Area -->
        <GroupBox Grid.Row="3" Header="AIの出力をここに貼り付け (Paste Output)" Margin="0,0,0,10">
            <TextBox Text="{Binding UserOutputText, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" 
                     Padding="5" BorderBrush="#2196F3" BorderThickness="1"/>
        </GroupBox>

        <!-- 5. Finish -->
        <Button Grid.Row="4" Command="{Binding FinishCommand}" 
                Height="40" Content="2. 解析して保存 (Save)" Margin="0,0,0,0"/>
    </Grid>
</UserControl>
