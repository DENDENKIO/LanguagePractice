<UserControl x:Class="LanguagePractice.Views.RouteEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="ルート編集 (Route Editor)" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ルート名:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RouteTitle}" Margin="0,0,0,5" Padding="3"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="説明:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RouteDescription}" Padding="3"/>
            </Grid>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Step List -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,10,0" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <Button Content="＋追加" Command="{Binding AddStepCommand}" Width="60" Margin="0,0,5,0"/>
                        <Button Content="↑" Command="{Binding MoveStepUpCommand}" Width="30" Margin="0,0,5,0"/>
                        <Button Content="↓" Command="{Binding MoveStepDownCommand}" Width="30" Margin="0,0,5,0"/>
                        <Button Content="削除" Command="{Binding RemoveStepCommand}" Width="50"/>
                    </StackPanel>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Steps}" SelectedItem="{Binding SelectedStep}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Operation}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Step Detail -->
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <Grid Visibility="{Binding IsStepSelected, Converter={StaticResource BoolToVis}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ステップ設定" FontWeight="Bold" Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="タイトル (表示名):" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding SelectedStep.Title}" Margin="0,0,0,10" Padding="3"/>

                        <TextBlock Text="Operation (実行内容):" Margin="0,0,0,2"/>
                        <ComboBox ItemsSource="{Binding OperationList}"
                                  SelectedItem="{Binding SelectedStep.Operation}"
                                  Margin="0,0,0,10" Padding="5"/>
                    </StackPanel>

                    <!-- ★GIKO Tone Preset -->
                    <GroupBox Grid.Row="2" Header="GIKO 文調プリセット" Margin="0,10,0,0"
                              Visibility="{Binding IsGikoStepSelected, Converter={StaticResource BoolToVis}}">
                        <StackPanel Margin="5">
                            <TextBlock Text="文調ラベル（FixedTone）:" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding TonePresets}"
                                      SelectedValuePath="Value"
                                      DisplayMemberPath="Label"
                                      SelectedValue="{Binding SelectedStep.FixedTone, UpdateSourceTrigger=PropertyChanged}"
                                      Height="28"/>

                            <TextBlock Text="※必要なら InputBindings に TONE_RULE を追加し、Mode=FIXED でルール本文を入れると上書きできます。"
                                       Foreground="Gray" FontSize="11" Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Input Bindings -->
                    <GroupBox Grid.Row="3" Header="入力バインディング (InputBindings)" Margin="0,10,0,0">
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding InputBindingsHint}" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Button Content="＋追加" Command="{Binding AddBindingCommand}" Width="60" Margin="0,0,6,0"/>
                                <Button Content="削除" Command="{Binding RemoveBindingCommand}" Width="60"/>
                            </StackPanel>

                            <DataGrid ItemsSource="{Binding BindingRows}"
                                      SelectedItem="{Binding SelectedBindingRow}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="False"
                                      HeadersVisibility="Column"
                                      Height="180">
                                <DataGrid.Columns>
                                    <DataGridComboBoxColumn Header="入力キー"
                                                            Width="160"
                                                            SelectedItemBinding="{Binding InputKey, UpdateSourceTrigger=PropertyChanged}"
                                                            ItemsSource="{Binding DataContext.AvailableInputKeys, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <DataGridComboBoxColumn Header="モード"
                                                            Width="120"
                                                            SelectedItemBinding="{Binding Mode, UpdateSourceTrigger=PropertyChanged}"
                                                            ItemsSource="{Binding DataContext.BindingModeList, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <DataGridTextColumn Header="値 (PrevKey / FixedText)"
                                                        Width="*"
                                                        Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="保存形式(参考)"
                                                        Width="200"
                                                        IsReadOnly="True"
                                                        Binding="{Binding BindingString}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="※ PREV_OUTPUT は「前ステップの解析キー名」を指定します（例: TEXT / TOPIC / READER）。"
                                       Foreground="Gray" FontSize="11" Margin="0,6,0,0" TextWrapping="Wrap"/>
                            <TextBlock Text="※ MANUAL はプロンプトに目印を入れるだけです（AIサイト側で手動置換してください）。"
                                       Foreground="Gray" FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>

                    <TextBlock Grid.Row="4" Text=" " />
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="キャンセル" Command="{Binding CancelCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="保存して一覧へ" Command="{Binding SaveRouteCommand}" Width="150"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
