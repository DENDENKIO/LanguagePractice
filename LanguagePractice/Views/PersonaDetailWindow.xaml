<Window x:Class="LanguagePractice.Views.PersonaDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="人物詳細・検証" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding Persona.Name}" FontSize="24" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="現在のステータス: "/>
                <TextBlock Text="{Binding Persona.VerificationStatus}" FontWeight="Bold" Foreground="Blue"/>
            </StackPanel>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="基本情報">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="場所/時代:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Persona.Location}" Margin="0,0,0,10" Padding="3"/>

                        <TextBlock Text="経歴 (Bio):" FontWeight="Bold"/>
                        <TextBox Text="{Binding Persona.Bio}" AcceptsReturn="True" TextWrapping="Wrap" Height="100" Margin="0,0,0,10" Padding="3"/>

                        <TextBlock Text="スタイル:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Persona.Style}" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Margin="0,0,0,10" Padding="3"/>

                        <TextBlock Text="タグ:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Persona.Tags}" Margin="0,0,0,10" Padding="3"/>

                        <Button Content="変更を保存" Command="{Binding SaveChangesCommand}" Width="150" HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="検証履歴">
                <DataGrid ItemsSource="{Binding VerificationHistory}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="日付" Binding="{Binding CreatedAt}" Width="140"/>
                        <DataGridTextColumn Header="判定" Binding="{Binding OverallVerdict}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="修正案 (Bio)" Binding="{Binding RevisedBioDraft}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2" Content="閉じる" IsCancel="true" Height="30" Width="100" Margin="0,10,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>
