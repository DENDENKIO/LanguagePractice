<UserControl x:Class="LanguagePractice.Views.MindsetLabReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#7B1FA2" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="← セッションへ戻る" Command="{Binding BackToSessionCommand}"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        FontSize="14" Cursor="Hand" Padding="10,5"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="📊 AIレビュー" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Day.DateKey}" FontSize="12" Foreground="#E1BEE7" HorizontalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="{Binding StatusMessage}" Foreground="#E1BEE7" 
                           VerticalAlignment="Center" Margin="10,0" FontSize="12"/>
            </Grid>
        </Border>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左パネル：レビュー生成 -->
            <Border Grid.Column="0" Background="#F5F5F5" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="🤖 AIレビュー生成" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Border Background="White" Padding="15" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="{Binding EntryCount, StringFormat='入力済み: {0}件'}" 
                                           FontWeight="Bold" Margin="0,0,0,15"/>

                                <!-- 自動生成ボタン -->
                                <Button Content="🤖 AIでレビュー自動生成" 
                                        Command="{Binding GenerateReviewAutoCommand}"
                                        Padding="12,10" FontSize="14"
                                        Background="#7B1FA2" Foreground="White" BorderThickness="0"
                                        IsEnabled="{Binding IsGenerating, Converter={StaticResource InverseBoolConverter}}"/>

                                <TextBlock Text="または" HorizontalAlignment="Center" Margin="0,10" Foreground="#757575"/>

                                <Button Content="📝 手動モードで生成" 
                                        Command="{Binding SwitchToManualCommand}"
                                        Padding="10,8"/>
                            </StackPanel>
                        </Border>

                        <!-- 手動モード入力エリア -->
                        <Border Background="White" Padding="10" CornerRadius="4" Margin="0,10,0,0"
                                Visibility="{Binding IsManualMode, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="【手動モード】" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,10"/>

                                <TextBlock Text="プロンプト:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding ReviewPrompt}" 
                                         Height="100"
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         IsReadOnly="True" Background="#FAFAFA"/>

                                <Button Content="📋 プロンプトをコピー" Command="{Binding CopyPromptCommand}"
                                        Padding="8,5" Margin="0,5,0,0"/>

                                <TextBlock Text="AI出力を貼り付け:" FontSize="12" Margin="0,10,0,5"/>
                                <TextBox Text="{Binding ReviewOutput, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="120"
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>

                                <Button Content="✅ レビュー適用" Command="{Binding ApplyReviewCommand}"
                                        Padding="10,8" Margin="0,10,0,0"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 右パネル：レビュー結果表示 -->
            <Border Grid.Column="1" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Visibility="{Binding HasReview, Converter={StaticResource BoolToVisibilityConverter}}">
                        <!-- スコア -->
                        <Border Background="#E8F5E9" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="総合スコア" FontSize="14" Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Review.TotalScore, StringFormat='{}{0}点'}" 
                                           FontSize="48" FontWeight="Bold" Foreground="#1B5E20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 詳細スコア -->
                        <Border Background="White" Padding="15" CornerRadius="4" Margin="0,0,0,10"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="📈 詳細スコア" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Review.SubscoresJson}" TextWrapping="Wrap" FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>

                        <!-- 強み -->
                        <Border Background="#E8F5E9" Padding="15" CornerRadius="4" Margin="0,0,0,10"
                                BorderBrush="#A5D6A7" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="💪 強み" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Review.Strengths}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- 弱み -->
                        <Border Background="#FFEBEE" Padding="15" CornerRadius="4" Margin="0,0,0,10"
                                BorderBrush="#EF9A9A" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="🎯 改善点" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Review.Weaknesses}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- 明日の課題 -->
                        <Border Background="#E3F2FD" Padding="15" CornerRadius="4" Margin="0,0,0,10"
                                BorderBrush="#90CAF9" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="📅 明日の課題" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Review.NextDayPlan}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- 核候補 -->
                        <Border Background="#FFF3E0" Padding="15" CornerRadius="4" Margin="0,0,0,10"
                                BorderBrush="#FFB74D" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="🔗 核候補（PoetryLab接続用）" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Review.CoreLink}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- フッター -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📁 エクスポート" Command="{Binding ExportCommand}"
                        Padding="15,10" Margin="0,0,10,0"
                        Background="#FF9800" Foreground="White" BorderThickness="0"/>
                <Button Content="🏠 ホームへ戻る" Command="{Binding BackToHomeCommand}"
                        Padding="15,10"
                        Background="#7B1FA2" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
