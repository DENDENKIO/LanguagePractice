<Window x:Class="LanguagePractice.Views.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="詳細表示" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title: OneWayバインディング -->
        <TextBlock Text="{Binding Title, Mode=OneWay}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <!-- Content: OneWayバインディング -->
            <TextBox Text="{Binding Content, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" 
                     FontSize="14" BorderThickness="0" Background="Transparent"/>
        </ScrollViewer>

        <Button Grid.Row="2" Content="閉じる" IsCancel="true" Height="30" Width="100" Margin="0,10,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>
