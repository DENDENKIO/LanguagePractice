<UserControl x:Class="LanguagePractice.Views.PoetryLabCompareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20,15">
            <TextBlock Text="比較・採択 - Winner選択" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- 核（不変条件）表示 -->
        <Border Grid.Row="1" Background="#E3F2FD" Padding="15" Margin="20,15,20,0">
            <StackPanel>
                <TextBlock Text="核（不変条件）:" FontWeight="Bold" Foreground="#1565C0"/>
                <TextBox Text="{Binding CoreText, Mode=OneWay}" 
                         IsReadOnly="True" TextWrapping="Wrap"
                         BorderThickness="0" Background="Transparent"
                         Foreground="#1565C0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- 改稿案3列比較 -->
        <Grid Grid.Row="2" Margin="20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ItemsControl ItemsSource="{Binding Candidates}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="0" 
                                BorderThickness="2"
                                CornerRadius="4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            <Setter Property="Background" Value="#F1F8E9"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- ヘッダー -->
                                <Border Grid.Row="0" Padding="10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="#C8E6C9"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <RadioButton Grid.Column="0" GroupName="RevisionCandidates"
                                                     IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                     VerticalAlignment="Center" Margin="0,0,10,0"
                                                     Command="{Binding DataContext.SelectCandidateCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                     CommandParameter="{Binding}"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding Approach}" FontSize="11" Foreground="#666666"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- 本文 -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                                    <TextBox Text="{Binding Body, Mode=OneWay}" 
                                             IsReadOnly="True" TextWrapping="Wrap"
                                             BorderThickness="0" Background="Transparent"
                                             FontFamily="Yu Mincho, MS Mincho" FontSize="13"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!-- 比較観点と理由入力 -->
        <Border Grid.Row="3" Margin="20,0,20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 比較観点（参考） -->
                <Border Grid.Column="0" Background="#FFFDE7" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="比較観点（参考）:" FontWeight="Bold" Foreground="#F57F17" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding ComparisonPoints}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="12" Foreground="#666666" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- 採択理由 -->
                <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" Padding="15">
                    <StackPanel>
                        <TextBlock Text="採択理由（推奨）:" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ReasonNote, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 Height="80" Padding="10"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- フッター -->
        <Border Grid.Row="4" Background="#F5F5F5" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="※ Winnerを選択するまで完了できません" 
                               Foreground="#888888" FontSize="12"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" Foreground="#666666" Margin="0,0,20,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="← 戻る" Command="{Binding BackCommand}"
                            Padding="15,10" Margin="0,0,10,0"/>
                    <Button Content="Winnerを確定してRunを完了 →" Command="{Binding ConfirmWinnerCommand}"
                            Padding="20,10"
                            Background="#4CAF50" Foreground="White" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanConfirm}" Value="False">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
