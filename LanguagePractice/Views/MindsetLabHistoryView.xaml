<UserControl x:Class="LanguagePractice.Views.MindsetLabHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#455A64" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="← 戻る" Command="{Binding BackCommand}"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        FontSize="14" Cursor="Hand" Padding="10,5"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="📅 履歴詳細" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Day.DateKey}" FontSize="14" Foreground="#B0BEC5" HorizontalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="{Binding StatusMessage}" Foreground="#B0BEC5" 
                           VerticalAlignment="Center" Margin="10,0"/>
            </Grid>
        </Border>

        <!-- メインコンテンツ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- 重点マインドセット -->
                <Border Background="#E3F2FD" Padding="15" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🎯 重点マインドセット" FontWeight="Bold" Foreground="#1565C0"/>
                        <TextBlock Text="{Binding Day.FocusMindsets}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- レビュー結果 -->
                <Border Background="#E8F5E9" Padding="15" CornerRadius="4" Margin="0,0,0,15"
                        Visibility="{Binding HasReview, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="{Binding Review.TotalScore, StringFormat='📊 スコア: {0}点'}" 
                                   FontSize="20" FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding Review.Strengths, StringFormat='強み: {0}'}" Margin="0,10,0,0" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Review.Weaknesses, StringFormat='改善点: {0}'}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Review.CoreLink, StringFormat='核候補: {0}'}" Margin="0,10,0,0" 
                                   Foreground="#E65100" FontWeight="Bold" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- エントリ一覧 -->
                <ItemsControl ItemsSource="{Binding GroupedEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Padding="15" CornerRadius="4" Margin="0,0,0,10"
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayHeader}" FontWeight="Bold" FontSize="14" 
                                               Foreground="#1565C0" Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding Entries}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0,0,0,10">
                                                    <TextBlock Text="{Binding EntryType}" FontWeight="Bold" FontSize="12" Foreground="#757575"/>
                                                    <TextBlock Text="{Binding BodyText}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- フッター -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📁 エクスポート" Command="{Binding ExportCommand}"
                        Padding="15,10"
                        Background="#FF9800" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
