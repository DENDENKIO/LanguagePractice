<Window x:Class="LanguagePractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LanguagePractice.Views"
        xmlns:viewmodels="clr-namespace:LanguagePractice.ViewModels"
        Title="LanguagePractice v1.0 (P2+)" Height="750" Width="1150"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WorkbenchViewModel}">
            <views:WorkbenchView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LibraryViewModel}">
            <views:LibraryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RouteSelectionViewModel}">
            <views:RouteSelectionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RouteExecutionViewModel}">
            <views:RouteExecutionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RouteEditorViewModel}">
            <views:RouteEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PracticeSessionViewModel}">
            <views:PracticeSessionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CompareViewModel}">
            <views:CompareView />
        </DataTemplate>
        <!-- Experiment -->
        <DataTemplate DataType="{x:Type viewmodels:ExperimentViewModel}">
            <views:ExperimentView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Language&#x0a;Practice" FontSize="20" FontWeight="Bold" 
                           TextAlignment="Center" Margin="0,10,0,20" Foreground="#333"/>

                <Button Content="作業台 (Workbench)" Height="35" Margin="0,2" Command="{Binding ShowWorkbenchCommand}"/>
                <Button Content="ルート (Routes)" Height="35" Margin="0,2" Command="{Binding ShowRoutesCommand}"/>
                <Button Content="練習 (Practice)" Height="35" Margin="0,2" Command="{Binding ShowPracticeCommand}"/>
                <Button Content="実験 (Experiment)" Height="35" Margin="0,2" Command="{Binding ShowExperimentCommand}"/>
                <Button Content="ライブラリ (Library)" Height="35" Margin="0,2" Command="{Binding ShowLibraryCommand}"/>
                <Button Content="比較 (Compare)" Height="35" Margin="0,2" Command="{Binding ShowCompareCommand}"/>

                <Separator Margin="0,20"/>

                <Button Content="設定 (Settings)" Height="35" Margin="0,2" Command="{Binding ShowSettingsCommand}"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>
</Window>
